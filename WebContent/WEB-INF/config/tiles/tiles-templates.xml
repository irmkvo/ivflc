<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
 
    <!-- Templates -->
    <!--DEFAULT-->
    <definition name="default-template" template="/WEB-INF/views/template/default/index.jsp" >
        <put-attribute name="header" value="/WEB-INF/views/template/default/header.jsp" />
        <put-attribute name="navigation" value="navigation" />
        <put-attribute name="content" value="" />
        <put-attribute name="scripts" value="/WEB-INF/views/template/default/scripts.jsp" />
    </definition>
    
    <!--BLANK-->
    <definition name="blank-template" template="/WEB-INF/views/template/blank/index.jsp" >        
        <put-attribute name="content" value="" />        
    </definition>
    
    <!--PREPARATOR-->
    <definition name="navigation" template="/WEB-INF/views/template/default/navigation.jsp" preparer="service.postgres.LeftBarController">
        
    </definition>    
    <!--PAGES-->
    <definition name="index" extends="default-template">
        <put-attribute name="content" value="" />
    </definition>
    
    <definition name="login" extends="blank-template">
        <put-attribute name="content" value="/WEB-INF/views/login.jsp" />
    </definition>
    
    <definition name="json" extends="blank-template">
        <put-attribute name="content" value="/WEB-INF/views/json/body.jsp" />
    </definition>
    
    <definition name="meeting/login" extends="blank-template">
        <put-attribute name="content" value="/WEB-INF/views/video/broadcast/login.jsp" />
    </definition>
    
    <definition name="404" extends="blank-template">
        <put-attribute name="content" value="/WEB-INF/views/error/404.jsp" />
    </definition>
    
    <definition name="403" extends="blank-template">
        <put-attribute name="content" value="/WEB-INF/views/error/403.jsp" />
    </definition>
</tiles-definitions>
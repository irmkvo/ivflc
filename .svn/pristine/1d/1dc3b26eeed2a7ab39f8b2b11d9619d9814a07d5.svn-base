package dao;

import domain.Patients;
import java.util.List;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Repository;

/**
 *
 * @author KVO
 */
@Repository
public class PatientsDAOImpl implements PatientsDAO {

    @Autowired
    @Qualifier("sessionFactoryMssql")
    private SessionFactory sessionFactory;

    @Override
    public Patients getPatient(Integer id) {
        return (Patients) sessionFactory.getCurrentSession().createQuery("from Patients where patientsId = :id").setParameter("id", id).uniqueResult();
    }

    @Override
    public List<Patients> getListOfPatients() {
        return sessionFactory.getCurrentSession().createQuery("from Patients").list();
    }

    @Override
    public Patients getPatientsByIIN(String IIN) {
        return (Patients) sessionFactory.getCurrentSession().createQuery("from Patients where iin = :iin").setString("iin", IIN).uniqueResult();
    }    
}


<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security 
    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http access-denied-page="/error403" use-expressions="true">
                <!--<intercept-url pattern="/**" access="isAuthenticated()"/>-->
                <anonymous username="guest" granted-authority="ROLE_ANONYMOUS"/>
                <remember-me user-service-ref="userService" />
                
                
                <intercept-url pattern="/**" access="hasAnyRole('ROLE_CLIENT', 'ROLE_ADMIN','ROLE_EMPLOYEE','ROLE_ANONYMOUS')" />
                <intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
                <intercept-url pattern="/clients/**" access="hasAnyRole('ROLE_CLIENT')" />
                <intercept-url pattern="/employers/**" access="hasAnyRole('ROLE_EMPLOYEE')" />
                <form-login login-page="/login" default-target-url="/index" authentication-failure-url="/login" />
                <logout logout-url="/logout" logout-success-url="/index" />
		              
		<remember-me />
	</http>
        
	<authentication-manager>
            <authentication-provider user-service-ref='userService'>
                <password-encoder hash="md5" />
            </authentication-provider>
            
	</authentication-manager>

</beans:beans>
